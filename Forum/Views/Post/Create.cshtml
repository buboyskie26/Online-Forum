@model Forum.ViewModels.Post.PostInForumTopicId;
@{
    ViewData["Title"] = "Create Post in Topic";
}
 
<div class="container body-content">
    <h1>Create a in @Model.ForumTitle Forum</h1>

    <div class="row col-md-12 ">
        <div class="createPostSection">
            <div class="authorBlock ">
                You`re submitting this post as <strong>@Model.AuthorName</strong>
            </div>
            <form asp-action="AddPost" method="post" id="addPostForm">

                <div class="form-group">
                    <label asp-for="PostTitle"></label>
                    <input asp-for="PostTitle" class="form-control" />
                </div>
                <div class="form-group contentArea">
                    <label asp-for="PostContent"></label>
                    <textarea asp-for="PostContent" class="form-control "></textarea>
                </div>
                <button type="submit" id="submitPostBtn" class="btn btn-submitPost">
                    Submit Post
                </button>

                <input asp-for="ForumId" type="hidden" />


            </form>

        </div>

    </div>

</div>


